<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="TdComplaintMapper">

	<!-- 字段 -->
	<sql id="Field">
	    complaint_id, user_id,activity_id ,created, updated,remark,
	    complaint_context,is_examine

	</sql>
	
	
	
	<!--表名 -->
	<sql id="tableName">
		td_complaint
	</sql>
	
	<select id="getAllTdComplaintlistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		<where>
	
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
			user_id LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
		</if>
		</where>
	    order by updated  desc
	</select>
	
</mapper>